extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3
        .row          
            .col-12
                +box-head('Product List')
    
        .row
            each item in products
                .col-4.mb-3 
                    .product-item
                        .inner-image 
                            img(src=item.thumnail, alt= item.title) 
                        .inner-content 
                            h3.inner-title 
                                a(href=`/products/${item.slug}`) #{item.title}  
                            .inner-price-new #{item.Newprice} VND
                            .inner-price-old #{item.Oldprice} VND 
                            .inner-discount -#{item.discountPercentage} %

            